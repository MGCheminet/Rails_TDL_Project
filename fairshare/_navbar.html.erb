<% excluded_paths = [login_path, signup_path, root_path] %>
<% unless excluded_paths.any? { |path| current_page?(path) } || !cookies.signed[:usuario_id] %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="<%= index_home_path %>">FairShare</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
      <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <div class="dropdown">
              <button class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Perfil
                <i class="fa fa-caret-down"></i>
              </button>
              <div class="dropdown-menu dropdown-options" aria-labelledby="navbarDropdown">
                <% if cookies.signed[:usuario_id] %>
                  <a class="dropdown-item" href="<%= perfil_path(cookies.signed[:usuario_id]) %>">Mis datos</a>
                  <a class="dropdown-item" href="<%= mis_gastos_path(id: cookies.signed[:usuario_id]) %>">Gastos</a>
                <% end %>
                <a class="dropdown-item" href="<%= logout_path %>" method="delete" rel="nofollow">Salir</a>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<% end %>